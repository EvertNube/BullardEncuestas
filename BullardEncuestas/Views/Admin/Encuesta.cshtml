@model BullardEncuestas.Core.DTO.EncuestaDTO
@{
    if (Model == null)
    {
        ViewBag.Title = "Encuesta";
    }
    else { ViewBag.Title = ViewBag.EncuestaNombre; }
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";


}

@section scripts{@Scripts.Render("~/Content/js/Encuesta.js")}


<section class="vbox">
    <section class="scrollable padder">
        <div class="row m-b">
            <div class="col-xs-12 col-md-10 col-md-offset-1">
                <h2>Editar Encuesta</h2>
                @Html.ValidationSummary(true)
                <div class="row m-b">
                    <div class="col-xs-12 col-md-9">
                        @Html.Partial("_showAlertMessages")
                        <section class="panel panel-default">
                            <header class="panel-heading font-bold">
                                @ViewBag.EncuestaPeriodo / @ViewBag.EncuestaNombre
                                <a class="btn btn-sm btn-success pull-right btn-rounded"><i class="fa fa-save"></i>&nbsp;&nbsp;Guardar</a>
                                <a class="btn btn-sm btn-success pull-right btn-rounded"><i class="fa fa-plus"></i>&nbsp;&nbsp;Configuración</a>
                            </header>
                            <div class="panel-body">
                                <div class="dd" id="nestable1">
                                    <ol class="dd-list">
                                        @foreach (var item in Model.Secciones)
                                        {
                                            <li class="dd-item dd-collapsed" data-id="@item.Orden">
                                                <div class="dd-handle">@item.Nombre</div>
                                                @if (item.SubSecciones != null)
                                                {
                                                    <ol>
                                                        @foreach (var subItem in item.SubSecciones)
                                                        {
                                                            <li class="dd-item dd-collapsed" data-id="@subItem.Orden.ToString()">
                                                                <div class="dd-handle">@subItem.Nombre</div>
                                                            </li>
                                                        }
                                                    </ol>
                                                }
                                                @*@if (item.Preguntas.Count != null)
                                                {*@
                                                    <ul class="list-group gutter list-group-lg list-group-sp sortable">
                                                        <li class="list-group-item" draggable="true">
                                                            <span class="pull-right">
                                                                <a href="#">
                                                                    <i class="fa fa-pencil icon-muted fa-fw m-r-xs"></i>
                                                                </a>
                                                                <a href="#">
                                                                    <i class="fa fa-plus icon-muted fa-fw m-r-xs"></i>
                                                                </a>
                                                                <a href="#">
                                                                    <i class="fa fa-times icon-muted fa-fw"></i>
                                                                </a>
                                                            </span>
                                                            <span class="pull-left media-xs">
                                                                <i class="fa fa-sort text-muted fa m-r-sm">
                                                                </i> 01
                                                            </span>
                                                            <div class="clear"> Respuesta 1</div>
                                                        </li>
                                                    </ul>

                                                @*}*@
                                            </li>
                                        }
                                    </ol>
                                </div>
                                <div class="line line-dashed line-lg pull-in"></div>
                                <div style="align-items:center">
                                    <a class="btn btn-sm btn-danger btn-rounded pull-right" href="/Admin/Index">Salir</a>
                                    &nbsp;
                                    <button type="submit" id="btnGuardar" class="btn btn-sm btn-primary btn-rounded pull-right">Guardar</button>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>