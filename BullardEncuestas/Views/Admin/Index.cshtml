@using BullardEncuestas.Helpers
@using BullardEncuestas.Core.DTO
@using PagedList;
@model IPagedList<EncuestaDTO>

@{
    ViewBag.Title = "Encuestas";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="hbox stretch">
    <aside>
        <section class="vbox">
            <section class="scrollable padder">
                <div class="col-xs-12 col-md-12">
                    <h2>Encuestas</h2>
                    <div class="row m-b">
                        <div class="col-xs-12 col-md-12">
                            <section class="panel panel-default">
                                <header class="panel-heading font-bold">
                                    <div class="col-sm-12 m-b-lg">
                                        <a class="btn btn-sm btn-success pull-right btn-rounded"><i class="fa fa-plus"></i> Nueva Encuesta</a>
                                    </div>
                                </header>
                                <div class="table-responsive">
                                    <table class="table table-striped b-t b-light" id="tableEncuestas">
                                        <thead>
                                            <tr>
                                                <th width="5%">ID</th>
                                                <th width="45%">Encuesta</th>
                                                <th width="10%">Periodo</th>
                                                @*<th width="21%" style="text-align:center">Estado</th>*@
                                                <th width="10%">Resultados</th>
                                                <th width="30%" style="text-align:center">Opciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {

                                                int cont = 1;
                                                foreach (var obj in Model)
                                                {
                                                    var classInactive = (ViewBag.EsAdmin && !obj.Estado) ? "class='inactive'" : "";
                                                    <tr>

                                                        <td align="center">
                                                            @if (ViewBag.EsAdmin && !obj.Estado)
                                                            { <span class="badge bg-danger" data-toggle="tooltip" data-placement="left" data-original-title="Inactivo">@cont</span>}
                                                            else
                                                            {@cont}
                                                        </td>
                                                        <td>@obj.NombreEncuesta</td>
                                                        <td>@obj.Periodo.Descripcion</td>
                                                        <td><a href="@Url.Action("Encuesta", new { id = obj.IdEncuesta })" data-toggle="tooltip" data-original-title="Mostrar reporte">Ver</a></td>
                                                        @if (ViewBag.EsAdmin)
                                                        {
                                                            <td style="text-align: center;">
                                                                <a style="text-align: center; padding: 0 15px;" href="@Url.Action("Encuesta", new { id = obj.IdEncuesta })" data-toggle="tooltip" data-original-title="Editar encuesta">
                                                                    <i class="fa fa-pencil"></i>
                                                                </a>
                                                                <a href="@Url.Action("SendCorreo", new { idGrupo = obj.IdGrupoEvaluado, nombreEncuesta = obj.NombreEncuesta, periodo = obj.Periodo.Descripcion })" data-toggle="tooltip" data-original-title="Enviar encuesta">
                                                                    <i class="fa fa-envelope"></i>
                                                                </a>
                                                            </td>
                                                        }
                                                    </tr>
                                                        cont++;
                                                }
                                            }
