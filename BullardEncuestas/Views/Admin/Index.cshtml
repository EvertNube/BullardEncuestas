                                                {
                                                    foreach (var obj in Model)
                                                    {
                                                        <tr>
                                                            <td>@obj.NombreEncuesta</td>
                                                            <td align="center">@obj.Periodo.Descripcion</td>
                                                            @if (obj.Estado)
