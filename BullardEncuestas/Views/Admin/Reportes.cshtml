@using BullardEncuestas.Helpers
@using BullardEncuestas.Core.DTO
@using PagedList;
@model IList<EncuestaDTO>
@section styles{
    @Styles.Render("~/Content/themes/admin/js/fuelux/fuelux.css")
}
@section scripts{
    @Scripts.Render("~/Content/themes/admin/js/fuelux/fuelux.js")
}
@{
    ViewBag.Title = "Reportes";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="vbox">
    <section class="scrollable padder">
        <div class="row m-b">
            <div class="col-xs-12 col-md-10 col-md-offset-1">
                <p style="margin-top:10px;"></p>
                @Html.Partial("_showAlertMessages")
                <h2>Reportes</h2>
                <section class="panel panel-default">
                    <header class="panel-heading font-bold">Encuestas / Periodos</header>
                    <div class="panel-body">

                        <div class="panel-group m-b" id="accordionP">
                            @foreach (EncuestaDTO encuesta in Model)
                            {
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordionP" href="#@encuesta.IdEncuesta"> @encuesta.NombreEncuesta </a>
                                    </div>
                                    <div id="@encuesta.IdEncuesta" class="panel-collapse collapse">
                                        <div class="panel-body">
                                            @{var subseccion1 = "sub1enc" + encuesta.IdEncuesta; }
                                            <div class="panel-group m-b" id="accordionSub1">
                                                <div class="panel panel-default">
                                                    <div class="panel-heading">
                                                        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordionSub1" href="#@subseccion1"> Encuesta (Resumen)</a>
                                                    </div>
                                                    <div id="@subseccion1" class="panel-collapse collapse in">
                                                        <div class="panel-body text-sm">
                                                            @if (encuesta.PromedioGeneral != null)
                                                            {<p><b>Promedio General: </b>@encuesta.PromedioGeneral</p>}
                                                            else
                                                            {<p><b>Promedio General: </b>No existen datos suficientes para obtener un promedio general</p>}

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            @{var subseccion2 = "sub2enc" + encuesta.IdEncuesta; }
                                            <div class="panel-group m-b" id="accordionSub2">
                                                <div class="panel panel-default">
                                                    <div class="panel-heading">
                                                        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordionSub2" href="#@subseccion2"> Detalle Evaluados</a>
                                                    </div>
                                                    <div id="@subseccion2" class="panel-collapse collapse in">
                                                        <div class="panel-body text-sm">
                                                            <div class="table-responsive">
                                                                <table class="table table-bordered">
                                                                    <tbody>
                                                                        <tr>
                                                                            <th>&nbsp;</th>
                                                                            @{int nelePxE = encuesta.listaReporteDetalle.Count;}
                                                                            @for(int i=0; i<nelePxE; i++)
                                                                            {
                                                                                if(i == 0)
                                                                                {
                                                                                    <th>
                                                                                        <div class="rotate"><div><span>@encuesta.listaReporteDetalle[i].NombreEvaluado</span></div></div>
                                                                                    </th>
                                                                                }
                                                                                else
                                                                                {

                                                                                }
                                                                            }
                                                                        </tr>
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            @*
                                                @{var subseccion3 = "sub3enc" + encuesta.IdEncuesta; }
                                                <div class="panel-group m-b" id="accordionSub3">
                                                    <div class="panel panel-default">
                                                        <div class="panel-heading">
                                                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordionSub3" href="#@subseccion3"> Puntaje por seccion</a>
                                                        </div>
                                                        <div id="@subseccion3" class="panel-collapse collapse in">
                                                            <div class="panel-body text-sm">
                                                                Test
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>*@
                                        </div>
                                    </div>
                                </div>

                            }
                        </div>

                    </div>
                </section>
            </div>
        </div>
    </section>
</section>