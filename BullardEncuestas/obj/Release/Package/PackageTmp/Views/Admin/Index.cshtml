                                                <th width="20%">Grupo</th>
                                                <th width="20%">Estado</th>
                                                @*<th width="15%">Resultados</th>*@
                                                <th width="10%" style="text-align:center">Opciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {

                                                int cont = 1;
                                                foreach (var obj in Model)
                                                {
