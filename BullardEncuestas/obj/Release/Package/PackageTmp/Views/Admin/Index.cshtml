                                                        <td align="center"> @cont </td>
                                                        <td>@obj.NombreEncuesta</td>
                                                        <td>@obj.Periodo.Descripcion</td>
                                                        <td>@obj.GrupoEvaluado.Nombre</td>
                                                        <td>@obj.EstadoProceso</td>
